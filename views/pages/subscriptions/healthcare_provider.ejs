<!DOCTYPE html>
<html>

<head>
    <% include ../../partials/common/load-scripts %>
</head>

<body>
    <% include ../../partials/common/left-pane %>
    <% include ../../partials/common/header %>

    <div id="app-right-pane-container">

        <div class="pg-section container-fluid mt-3 tab-parent-container">
            
            <div class="tab-container">
                <div class="tab text-tab" showel="subscriptions-per-package-container">Packages</div>
                <div class="tab text-tab" showel="subscriptions-per-app-container">Individual Apps</div>
            </div>

            <div class="tab-content-container">
                <div id="subscriptions-per-package-container" class="mb-4 tab-content"></div>
                <div id="subscriptions-per-app-container" class="mb-4 tab-content"></div>
            </div>

        </div>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="subscribe-confirmation-modal" tabindex="-1" role="dialog"
        aria-labelledby="subscribe-confirmation-modal" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Subscribe</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    
                    <button type="button" class="btn btn-light" id="subscribe-button" disabled>
                        <label class="m-0">Subscribe</label>
                    </button>
                    <button type="button" class="btn btn-link" data-dismiss="modal">
                        <label class="m-0 pointer">cancel</label>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script>
        //Bind tabs
        $('.tab').tab();
        $('.tab[showel="subscriptions-per-package-container"]').trigger('click');
    </script>

    <!-- BOOTSTRAP SCRIPTS -->
