<div class="p-3 border rounded  bg-white">

    <div class="form-group mt-4">
        <div class="row">
            <div class="col-sm-4">
                <div class="mx-auto position-relative text-center" style="width:150px">
                    <img src="/gfs/images/noimage-icon-x225.png" class="rounded-circle"
                        alt="[PROFILE PIC NOT FOUND. TRY UPLOADING AGAIN]" style="max-width: 100%;">
                    <div class="upload-img-container" style="top: 45%;right:-10px;">
                        <input id="update-profile-img-input" 
                            name="upload-user-profile-image" type="file"
                            title="upload image">
                        <div class="input-overlay" >
                            <i class="material-icons">camera_alt</i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="form-group">
                    <label for="first-name" data-required="1">First Name </label>
                    <input type="text" name="first_name" id="first-name" data-required="1" 
                        class="form-control entry-field" placeholder="First name">
                </div>
                <div class="form-group">
                    <label for="last-name" data-required="1">Last Name </label>
                    <input type="text" name="last_name" id="last-name" data-required="1" 
                        class="form-control entry-field" placeholder="Last name">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group mt-2">
        <div>
            <label for="personal-email-id" data-required="1">Email ID </label>

            <div class="ctooltip"
                content="We do not share this email id with patients or users searching your profile. 
                        This email id is linked to your account authentication and will be used as primary email for your account.">
                <i class="material-icons align-middle">info</i>
            </div>
        </div>
        <input id="personal-email-id" name="personal_email_id" 
            data-required="1" class='form-control entry-field' 
            type="email" data-required="1"
            autocomplete="off" placeholder="Email Id">
    </div>

    <div class="form-group">
        <div>
            <label for="phone-number" data-required="1">Phone Number </label>
            <div class="ctooltip"
                content="We do not share this phone number with patients or users searching your profile. 
                        This phone number is linked to your account authentication and will be used as primary number for your account.">
                <i class="material-icons align-middle">info</i>
            </div>
        </div>

        <div class="row">
            <div class="col">
                <select name="country_code" 
                    data-required="1" id="country-code" 
                    class="form-control entry-field country-dial-code-option-list" 
                    placeholder="country code"></select>
            </div>
            <div class="col">
                <input type="text" name="personal_primary_number" 
                    id="personal-primary-number" 
                    class="form-control entry-field" data-required="1"  
                    placeholder="Phone Number">
            </div>
        </div>
    </div>

    <div class="form-group">
        <div>
            <label for="specialty" data-required="1">Primary Specialty </label>
            <div class="ctooltip" content="The selected speciality will be visible to all users who views your profile">
                <i class="material-icons align-middle">info</i>
            </div>
        </div>
        <select id="specialty"  name="specialty"  
            class='form-control specialty-option-list entry-field' 
            data-required="1" placeholder="Specialty"></select>
    </div>

    <div class="form-group">
        <div>
            <label>Address <i class="small text-muted">(Optional)</i></label>
            <div class="ctooltip"
                content="The address will not be visible to any users. Address information may be used during the trasactions.">
                <i class="material-icons align-middle">info</i>
            </div>
        </div>

        <input type="text" name="personal_address_street_address_1"
             id="personal-address-street-address-1" 
            class="form-control mt-2 entry-field" 
            placeholder="Street Address line #1">
        <input type="text" name="personal_address_street_address_2"
            id="personal-address-street-address-2" 
            class="form-control mt-2 entry-field" 
            placeholder="Street Address line #2">
        
        <div class="row mt-2">
            <div class="col">
                <input type="text" name="personal_address_city" id="personal-address-city" 
                    class="form-control" placeholder="City">
            </div>
            <div class="col">
                <input type="text" name="personal_address_zip_code" id="personal-address-zip-code" 
                    class="form-control" 
                    placeholder="Zip/Postal code">
            </div>
        </div>

        <div class="row mt-2">
            <div class="col">
                <input type="text" name="personal_address_state" 
                    id="personal-address-state" 
                    class="form-control entry-field" 
                    placeholder="State">
            </div>
            <div class="col">
                <select name="personal_address_country" 
                    id="personal-address-country" 
                    class="form-control country-name-option-list entry-field"></select>
            </div>
        </div>
    </div>

    <div style="height: 40px;" class="mt-4 pt-2 border-top">
        <div class="float-right">
            <div class="btn btn-primary pointer next-button step-click" stepnum="2">
                <label class="mb-0 mt-1 pointer align-middle"> Next â†’ </label>
            </div>
        </div>
    </div>

</div>